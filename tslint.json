{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "interface-name": false,
    "member-ordering": false,
    "no-console": false,
    "no-unused-expression": [
      true,
      "allow-fast-null-checks"
    ],
    "max-line-length": [
      true,
      140
    ],
    "max-file-line-count": [
      true,
      300
    ],
    "indent": [
      true,
      "spaces",
      2
    ]
  },
  "jsRules": {
    "object-literal-sort-keys": false,
    "no-console": false
  }
}